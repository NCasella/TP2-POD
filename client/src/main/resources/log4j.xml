<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="ClientAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="${client.log.file}"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss:SSSS} %p [%t] %c{1} (%F:%L) - %m%n"/>
		</layout>
	</appender>

	<logger name="ar.edu.itba.pod.client">
		<level value="INFO"/>
		<appender-ref ref="ClientAppender"/>
	</logger>



</log4j:configuration>